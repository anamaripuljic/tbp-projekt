@page
@model tbp_projekt.Pages.PovijestDogadajaModel
@{
}

<div>
    <form method="post" class="form-horizontal" action="">
        <h1>Evidencija događaja</h1>

        <label>Odaberite biljku:</label>
        <select asp-for="@Model.kreiraniDogadaji.Id_biljka" asp-items="Model.BiljkeZaOdabir" required class="form-control">
           
        </select><br />

        <label>Odaberite događaj:</label>
        <select asp-for="@Model.kreiraniDogadaji.Id_dogadaj" asp-items="Model.DogadajZaOdabir" required class="form-control">
           
        </select><br />

        <label>Unesite datum kada ste obavili događaj</label>
        <input type="date" asp-for="@Model.kreiraniDogadaji.Datum_dogadaja_pov" value="" class="form-control" />

        <button type="submit" class="btn btn-primary mb-2">Unesi</button>

    </form>

</div>

